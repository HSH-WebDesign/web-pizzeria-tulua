---
interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}

const { name, description, price, image } = Astro.props;
---

<div
  class="w-full max-w-sm bg-white rounded-2xl overflow-hidden shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"
>
  <div class="h-64 overflow-hidden">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
    />
  </div>

  <div class="p-6 md:p-8">
    <div class="flex justify-between items-start gap-4 mb-4">
      <h3 class="text-2xl text-dark font-semibold flex-1 uppercase">{name}</h3>
      <span
        class="text-2xl text-primary font-bold whitespace-nowrap uppercase text-center"
        >{price.toFixed(2)}â‚¬</span
      >
    </div>
    <p class="text-medium-gray leading-relaxed text-md md:text-base">
      {description}
    </p>
  </div>
</div>
