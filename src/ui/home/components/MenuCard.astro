---
interface Props {
  name: string;
  description: string;
  priceWhole: number;
  priceSlice: number;
  image: string;
}

const { name, description, priceWhole, priceSlice, image } = Astro.props;

// Formatear precios en pesos colombianos
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CO', {
    style: 'currency',
    currency: 'COP',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(price);
};
---

<div
  class="w-full max-w-sm bg-white rounded-2xl overflow-hidden shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl"
>
  <div class="h-64 overflow-hidden">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
    />
  </div>

  <div class="p-6 md:p-8">
    <div class="mb-4">
      <h3 class="text-2xl text-dark font-semibold uppercase mb-3">{name}</h3>
      <div class="flex flex-col gap-2">
        <div class="flex justify-between items-center">
          <span class="text-sm text-medium-gray font-medium">Pizza Completa:</span>
          <span class="text-xl text-primary font-bold">{formatPrice(priceWhole)}</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-medium-gray font-medium">Por Porci√≥n:</span>
          <span class="text-lg text-primary font-semibold">{formatPrice(priceSlice)}</span>
        </div>
      </div>
    </div>
    <p class="text-medium-gray leading-relaxed text-md md:text-base">
      {description}
    </p>
  </div>
</div>
