---
import { useTranslations } from "@i18n/utils";
import type { languages } from "@i18n/ui";

interface Props {
  lang: keyof typeof languages;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const baseUrl = lang === 'es' ? '' : `/${lang}`;
---

<header class="fixed w-full top-0 z-1000 bg-black/90 backdrop-blur-[10px] py-4">
  <nav class="max-w-[1200px] mx-auto flex justify-between items-center px-8">
    <a href={`${baseUrl}/`} class="flex items-center gap-3 no-underline">
      <img
        src="/logo.png"
        alt={t("brand.name")}
        class="w-12 h-12 object-contain"
      />
    </a>

    <ul class="flex gap-8 list-none md:flex">
      <li>
        <a
          href={`${baseUrl}/#home`}
          class="text-white no-underline transition-colors duration-300 font-medium hover:text-primary"
        >
          {t("nav.home")}
        </a>
      </li>
      <li>
        <a
          href={`${baseUrl}/#menu`}
          class="text-white no-underline transition-colors duration-300 font-medium hover:text-primary"
        >
          {t("nav.menu")}
        </a>
      </li>
      <li>
        <a
          href={`${baseUrl}/#contact`}
          class="text-white no-underline transition-colors duration-300 font-medium hover:text-primary"
        >
          {t("nav.contact")}
        </a>
      </li>
    </ul>
  </nav>
</header>
