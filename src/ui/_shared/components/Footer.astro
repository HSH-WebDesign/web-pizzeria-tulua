    <div class="flex flex-wrap justify-center gap-8 md:gap-16 mb-8 md:mb-12">
      <div class="footer-section">
        <h3 class="text-primary mb-4 md:mb-6 text-xl md:text-2xl font-semibold">
          {t("footer.schedule.title")}
        </h3>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          {t("footer.schedule.weekday")}
        </p>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          {t("footer.schedule.weekend")}
        </p>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          {t("footer.schedule.sunday")}
        </p>
      </div>

      <div class="footer-section">
        <h3 class="text-primary mb-4 md:mb-6 text-xl md:text-2xl font-semibold">
          {t("footer.contact.title")}
        </h3>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          üìç {t("footer.address")}
        </p>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          üìû {t("footer.phone")}
        </p>
        <p class="text-light-gray mb-2 text-sm md:text-base">
          ‚úâÔ∏è {t("footer.email")}
        </p>
      </div>
    </div>

    <div
      class="mt-8 pt-8 border-t border-[#333] text-[#888] text-sm md:text-base"
    >
      <p>{t("footer.copyright", { year: currentYear })}</p>
    </div>
  </div>
</footer>
